<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="grup6.client.LoginDialogController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Iniciar Sesión" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <GridPane vgap="10" hgap="10">
        <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Iniciar Sesión" onAction="#handleLogin" style="-fx-background-color: #4682B4; -fx-text-fill: white;"/>
        <Button text="Registrarse" onAction="#handleRegister" style="-fx-background-color: #4682B4; -fx-text-fill: white;"/>
        <Button text="Cancelar" onAction="#handleCancel" style="-fx-background-color: #A9A9A9; -fx-text-fill: white;"/>
        <Button text="Salir" onAction="#handleExit" style="-fx-background-color: #DC143C; -fx-text-fill: white;"/>
    </HBox>
</VBox> 